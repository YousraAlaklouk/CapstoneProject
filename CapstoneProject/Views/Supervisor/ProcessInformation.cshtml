                    @Html.DisplayNameFor(model => model.e.PersonID)

                </div>
                <p>Choose the Animal ID</p>
                <div class="form-group" style="margin-bottom:5px">
                    @Html.DropDownListFor(model => model.Animals[0].ID, new MultiSelectList(Model.Animals, "ID", "ID"), "Select Type*", new { @class = "form-control" })
                </div>
                <p> The Process State Is</p>
                <div class="form-group" style="margin-bottom:5px">

                    @Html.TextBoxFor(model => model.Process.State, new { @class = "form-control" })
                </div>
            }
        </div>
        <div class="text-center mt-4">
