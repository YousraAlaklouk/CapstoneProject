
@{
    ViewBag.Title = "SupervisorRegistration";
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>SupervisorRegistration</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="~/assets/favicon.ico" />
    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/Content/styles.css" rel="stylesheet" />
</head>
<body id="page-top">
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg bg-secondary text-uppercase fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand" href="~/Views/Home/Index.cshtml">Home</a>
            <button class="navbar-toggler text-uppercase font-weight-bold bg-primary text-white rounded" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded" href="#page_top">Register A Supervisor</a></li>
                    <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded" href="#RegisterAnimal">Register An Animal</a></li>
                    <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded" href="#LoginAdmin">Login As An Admin</a></li>
                    <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded" href="#LoginS">Login As A Supervisor</a></li>

                </ul>
            </div>
        </div>
    </nav>
    <!-- About Section-->
    <section class="page-section bg-primary text-white mb-0" id="about">
        <div class="container">
            <!-- About Section Heading-->
            <br />
            <br />
            <h2 class="page-section-heading text-center text-uppercase text-white">Supervisor Registeration</h2>
            <!-- Icon Divider-->
            <div class="divider-custom divider-light">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                <div class="divider-custom-line"></div>
            </div>
            <!-- About Section Content-->
            @using (Html.BeginForm("Index", "Home", FormMethod.Post))
            {
                <div class="form-group" style="margin-bottom:5px">
                    @Html.TextBoxFor(en => en.UserName, new { @class = "form-control", placeholder = "UserName *", })
                    @Html.ValidationMessageFor(en => en.UserName)
                </div>
                <div class="form-group" style="margin-bottom:5px">
                    @Html.TextBoxFor(en => en.FullName, new { @class = "form-control", placeholder = "Full Name *" })
                    @Html.ValidationMessageFor(en => en.FullName)
                </div>
                <div class="form-group" style="margin-bottom:5px">
                    @Html.PasswordFor(en => en.Password, new { id = "password", @class = "form-control", placeholder = "Password *" })
                    <span id="result"></span>
                    @Html.ValidationMessageFor(en => en.Password)
                </div>
                <div class="form-group" style="margin-bottom:5px">
                    @Html.PasswordFor(en => en.Confirmpwd, new { @class = "form-control", placeholder = "Confirm Password *" })
                    @Html.ValidationMessageFor(en => en.Confirmpwd)
                </div>
                <div class="form-group" style="margin-bottom:5px">
                    @Html.TextBoxFor(en => en.Email, new { @class = "form-control", placeholder = "Your Email *" })
                    @Html.ValidationMessageFor(en => en.Email)
                </div>
                <div class="form-group" style="margin-bottom:5px">
                    @Html.TextBoxFor(en => en.BirthDate, new { @class = "form-control", placeholder = "Your BirthDate in  yyyy-mm-dd Form*" })
                    @Html.ValidationMessageFor(en => en.BirthDate)
                </div>
                <div class="form-group" style="margin-bottom:10px">
                    <div class="maxl">
                        @Html.RadioButtonFor(en => en.Gender, "Male", new { @class = "radio inline" })<span> Male </span>
                        @Html.RadioButtonFor(en => en.Gender, "Female", new { @class = "radio inline" })<span>Female </span>
                    </div>
                </div>
                <div class="form-group" style="margin-bottom:10px">
                    <div class="col-auto"><button class="btn btn-primary" id="submitButton" type="submit">Register!</button></div>
                </div>
                <script type="text/javascript">
                                            $(function () {
                                            var msg = '@ViewData["result"]';
                                            if (msg == '1')
                                            {
                                                alert("User Details Inserted Successfully");
                                                window.location.href = "@Url.Action("Registered", "Home")";
                                                }
                                            });
                </script>
                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }
            }
        </div>
        </div>
        <!-- About Section Button-->
        <div class="text-center mt-4">
            <a class="btn btn-xl btn-outline-light" href="https://startbootstrap.com/theme/freelancer/">
                <i class="fas fa-download me-2"></i>
                Free Download!
            </a>
        </div>
        </div>
    </section>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="js/scripts.js"></script>
    <!-- * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *-->
    <!-- * *                               SB Forms JS                               * *-->
    <!-- * * Activate your form at https://startbootstrap.com/solution/contact-forms * *-->
    <!-- * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *-->
    <script src="https://cdn.startbootstrap.com/sb-forms-latest.js"></script>
</body>
</html>